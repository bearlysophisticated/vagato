<div class="thumbnail">
    <div class="thumbnail-img crop">
      <%= image_tag room.image.url %>
    </div>
    <div class="caption">
      <div class="row">
          <div align="left" class="col-md-8">
            <strong><%= link_to room.name, "/rooms/#{room.id}" %></strong> - <small><%= link_to room.accommodation.name, room.accommodation %></small><br />
            <% (room.price.value_with_vat/5000).to_i.times do %>
                <i class="fa fa-eur"></i>
            <% end %>
          </div>
          <div align="right" class="col-md-4">
            <% room.capacity.times do %>
                <i class="fa fa-bed"></i>
            <% end %>
          </div>
      </div>
    </div>
</div>