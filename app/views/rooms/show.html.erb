<p id="notice"><%= notice %></p>

<% if current_user.owner? || current_user.admin? %>
    <%= link_to 'Szerkesztés', edit_room_path(@room), class: "btn btn-success right" %>
<% end %>


<small><%= @room.accommodation.name %></small>
<h2>
  <%= @room.name %>
</h2>
<% @room.equipments.map do |equipment| %>
  <span class="label label-info" style="margin-right: 5px;">
     <%= equipment.name %> 
  </span>
<% end %>

<p class="italic"><br>
  <%= @room.description %>
</p>

<p>
	<strong>Kapacitás:</strong> <%= @room.capacity %>
</p>

<p>
	<strong>Hasonló szobák száma:</strong> <%= @room.num_of_this %>
</p>

<p>
	<strong>Ár:</strong> <%= @room.price.value_with_vat %> <%= @room.price.currency %> + <%= @room.price.ifa %> <%= @room.price.currency %>/fő/éj IFA
</p>

<% if current_user.guest? %>
    <div class="well">
      <div class="container">
        <div class="col-md-2">
            <h3>Foglalás</h3>
        </div>

        <%= simple_form_for @cart do |c| %>
              <div class='col-md-4'>
                <div class="form-group">
                  <div class='input-group'>
                    <input type='text' class="form-control" id='booking_startdate' />
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                  </div>
                </div>
              </div>
              <div class='col-md-4'>
                <div class="form-group">
                  <div class='input-group'>
                    <input type='text' class="form-control" id='booking_enddate' />
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                  </div>
                </div>
              </div>

              <div class="col-md-2">
                <%= link_to 'Foglalás', "/cart/add/#{@room.id}", class: "btn btn-success" %>
              </div>
        <% end %>

      </div>
    </div>
<% end %>

<%= link_to 'Vissza', @room.accommodation %>
