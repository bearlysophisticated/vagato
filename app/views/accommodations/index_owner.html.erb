<% if user_signed_in? %>
  <%= link_to 'Új szállás', new_accommodation_path, class: 'btn btn-success right' %>
<% end %>

<div class="row">
  <% @accommodations.each do |accommodation| %>
    <div class="col-sm-3">
      <%= render 'accommodations/thumbnail', :accommodation => accommodation %>
    </div>
  <% end %>
</div>