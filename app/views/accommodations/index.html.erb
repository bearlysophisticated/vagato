<div id="accommodations" class="row">
  <% @accommodations.each do |accommodation| %>
    <div class="col-sm-3 col-xs-6 col-md-3">
      <div class="thumbnail">
        <div class="thumbnail-img crop">
            <%= image_tag accommodation.image.url %>
        </div>
        <div class="caption">
            <%= link_to accommodation.name, accommodation %>
        </div>
      </div>
    </div>
  <% end %>
</div>