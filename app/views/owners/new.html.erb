<div class="narrow-60">

  <h2>Szállásadó regisztráció</h2>

  <%= form_for @owner do |o| %>

      <%= render 'errors' %>

      <div class="form-group">
        <%= o.label "Megnevezés" %>
        <%= o.text_field :name, class: "form-control" %>
      </div>

      <%= o.fields_for :user do |u| %>

        <div class="form-group">
          <%= u.label "E-mail" %>
          <%= u.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= u.label "Jelszó" %>
          <% if @validatable %>
          <em>(legalább <%= @minimum_password_length %> karakter hosszú)</em>
          <% end %>
          <%= u.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= u.label "Jelszó újra" %>
          <%= u.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

      <% end %>

    <div class="form-group">
      <%= o.submit "Regisztráció", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>