<h1>Listing room_equipments</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Equipment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_equipments.each do |room_equipment| %>
      <tr>
        <td><%= room_equipment.room_id %></td>
        <td><%= room_equipment.equipment_id %></td>
        <td><%= link_to 'Show', room_equipment %></td>
        <td><%= link_to 'Edit', edit_room_equipment_path(room_equipment) %></td>
        <td><%= link_to 'Destroy', room_equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

