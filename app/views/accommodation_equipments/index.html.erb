<h1>Listing accommodation_equipments</h1>

<table>
  <thead>
    <tr>
      <th>Accommodation</th>
      <th>Equipment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accommodation_equipments.each do |accommodation_equipment| %>
      <tr>
        <td><%= accommodation_equipment.accommodation_id %></td>
        <td><%= accommodation_equipment.equipment_id %></td>
        <td><%= link_to 'Show', accommodation_equipment %></td>
        <td><%= link_to 'Edit', edit_accommodation_equipment_path(accommodation_equipment) %></td>
        <td><%= link_to 'Destroy', accommodation_equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

